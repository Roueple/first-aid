rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Findings collection
    match /findings/{findingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Audit Results collection
    match /audit-results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.auditResultId is string &&
        request.resource.data.auditResultId == resultId &&
        request.resource.data.year is string &&
        request.resource.data.projectName is string;
      allow update: if isAuthenticated() &&
        request.resource.data.auditResultId == resource.data.auditResultId;
      allow delete: if isAuthenticated();
    }
    
    // Chat sessions
    match /chatSessions/{sessionId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Privacy mappings - server-side only
    match /mappings/{mappingId} {
      allow read, write: if false;
    }
    
    // Reports
    match /reports/{reportId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Patterns
    match /patterns/{patternId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Audit logs
    match /auditLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Connection test document (for monitoring)
    match /_connection_test_/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // DocAI Sessions - users can only access their own sessions
    match /doc_sessions/{sessionId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // DocAI Chats (2-table structure)
    // Security: Chats are protected via session ownership
    // Users can only query sessions they own (enforced in doc_sessions rules)
    // Therefore, if they have a sessionId, they own those chats
    match /doc_chats/{chatId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Departments - read-only for authenticated users
    match /departments/{departmentId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin/scripts can write
    }
    
    // Felix Sessions - users can only access their own sessions
    match /felix_sessions/{sessionId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Felix Chats - users can only access their own chats
    match /felix_chats/{chatId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Email Whitelist - read-only for all (needed for passwordless auth check), write-only for admins
    match /emailWhitelist/{email} {
      allow read: if true; // Allow unauthenticated read for whitelist check during sign-in
      allow write: if false; // Only admin scripts can write
      // Allow users to update only their own displayName field
      allow update: if isAuthenticated() && 
        request.auth.token.email.lower() == email &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName']);
    }
    
    // Device Sessions - allow unauthenticated read for session check during sign-in
    // Session IDs are composite (deviceId_email), so users can only access their own sessions
    match /deviceSessions/{sessionId} {
      allow read: if true; // Allow unauthenticated read for session validation during sign-in
      allow create: if isAuthenticated() && 
        request.resource.data.email == request.auth.token.email;
      allow update: if isAuthenticated() && 
        resource.data.email == request.auth.token.email;
      allow delete: if isAuthenticated() && 
        resource.data.email == request.auth.token.email;
    }
    
    // Complaints - users can create and read their own complaints
    match /complaints/{complaintId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if false; // Only admins via console
      allow delete: if false; // Only admins via console
    }
    
    // Mail queue - for email sending (Firebase Extensions)
    match /mail/{mailId} {
      allow read, write: if false; // Only Cloud Functions can write
    }
    
    // Onboarding Tutorials - users can only access their own tutorial state
    match /onboarding_tutorials/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && 
        isOwner(userId) &&
        request.resource.data.userId == userId;
      allow update: if isAuthenticated() && 
        isOwner(userId) &&
        resource.data.userId == userId;
      allow delete: if isAuthenticated() && isOwner(userId);
    }
  }
}
