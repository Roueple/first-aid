{
  "name": "first-aid-system",
  "version": "1.0.0",
  "description": "FIRST-AID - Intelligent Audit Findings Management System",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "dev:emulators": "firebase emulators:start",
    "dev:with-emulators": "concurrently \"npm run dev:emulators\" \"npm run dev\"",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "electron-builder --dir",
    "package:dist": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win portable",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:rules": "firebase emulators:exec --only firestore 'npm test'",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "import:projects": "node scripts/import-projects-from-excel.mjs",
    "import:audit-results": "node scripts/import-audit-results-from-excel.mjs",
    "import:all": "node scripts/import-projects-and-audit-results.mjs",
    "upload:projects": "node scripts/upload-projects-export.mjs",
    "recalc:projects": "node scripts/recalculate-project-stats.mjs",
    "update:project-counts": "node scripts/update-project-counts-from-audit.mjs",
    "migrate:projects": "node scripts/migrate-to-summary.mjs",
    "test:hybrid-rag": "node test-hybrid-rag.mjs"
  },
  "keywords": [
    "audit",
    "findings",
    "management",
    "ai",
    "electron"
  ],
  "author": "FIRST-AID Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/config-array": "^0.21.1",
    "@eslint/js": "^9.38.0",
    "@eslint/object-schema": "^2.1.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.12",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.5",
    "electron": "^39.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fast-check": "^4.4.0",
    "glob": "^11.0.0",
    "globals": "^15.14.0",
    "jsdom": "^27.2.0",
    "lru-cache": "^11.0.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.8",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@chatscope/chat-ui-kit-react": "^2.1.1",
    "@chatscope/chat-ui-kit-styles": "^1.4.0",
    "@google/genai": "^1.32.0",
    "@google/generative-ai": "^0.24.1",
    "@lottiefiles/dotlottie-react": "^0.17.10",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.23.25",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.560.0",
    "react": "^18.2.0",
    "react-chat-elements": "^12.0.18",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.5.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^4.1.12"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "inflight": "npm:lru-cache@^11.0.2",
    "npmlog": "^7.0.1",
    "gauge": "^5.0.0",
    "are-we-there-yet": "^4.0.0"
  }
}
