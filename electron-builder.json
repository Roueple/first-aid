{
  "appId": "com.firstaid.auditmanagement",
  "productName": "FIRST-AID",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "!node_modules/**/*"
  ],
  "asarUnpack": [
    "node_modules/jszip/**/*"
  ],
  "extraResources": [],
  "protocols": {
    "name": "FIRST-AID Auth",
    "schemes": ["firstaid"]
  },
  "win": {
    "target": ["portable"],
    "icon": "build/icon.ico"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build/icon.icns",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Office"
  }
}
