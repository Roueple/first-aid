{
  "appId": "com.firstaid.auditmanagement",
  "productName": "FIRST-AID",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "publish": {
    "provider": "github",
    "owner": "Roueple",
    "repo": "first-aid",
    "releaseType": "release",
    "private": true
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "includeSubNodeModules": false,
  "asarUnpack": [
    "node_modules/jszip/**/*",
    "node_modules/electron-updater/**/*"
  ],
  "extraResources": [
    {
      "from": "build/icon.png",
      "to": "build/icon.png"
    },
    {
      "from": "build/icon.ico",
      "to": "build/icon.ico"
    }
  ],
  "protocols": {
    "name": "FIRST-AID Auth",
    "schemes": ["firstaid"]
  },
  "compression": "maximum",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "publisherName": "FIRST-AID Team",
    "verifyUpdateCodeSignature": false,
    "sign": null,
    "signingHashAlgorithms": [],
    "signAndEditExecutable": false,
    "publish": ["github"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowElevation": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "FIRST-AID",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true,
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "license": "LICENSE.txt",
    "differentialPackage": true
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.exe"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build/icon.icns",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Office"
  }
}
